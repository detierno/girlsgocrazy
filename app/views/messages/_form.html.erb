<%= simple_form_for [@event, @topic, message], :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :body, html: {rows: 4} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <% if not message.body.nil? %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    event_topic_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>
