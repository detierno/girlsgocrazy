<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">A Galera</li>

      <% @users.each do |user| %>
        <li class="user_card">
          <%= gravatar_tag user.email, :size => 35 %>
          <% if user.nick.empty? %>
	          <%= user.email %>
	       <%else%>
	          <%= user.nick %>
	       <%end%>
        </li>
      <% end %>

    </ul>
  </div>
</div>
