<%- model_class = Item -%>
<div class="page-header">
  <h1>
    <%= link_to "#{@event.name} >", event_path(@event), class: 'small' %><%= link_to 'Todos os itens > ', event_path(@event), class: 'small' %><%= @item.title %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @item.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <% if @item.user.nick.empty? %>
      <dd><%= @item.user.email %></dd>
  <%else%>
      <dd><%= @item.user.nick %></dd>
  <%end%>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @item.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @item.value %></dd>
  <dt><strong>Total:</strong></dt>
  <dd><%= @item.amount * @item.value %></dd>

</dl>

